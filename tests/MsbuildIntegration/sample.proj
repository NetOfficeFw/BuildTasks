<Project>
  <UsingTask TaskName="NetOffice.Build.RegisterAddin" AssemblyFile="$(MSBuildThisFileDirectory)NetOfficeBuildTasks.dll" />
  <UsingTask TaskName="NetOffice.Build.CleanAddin" AssemblyFile="$(MSBuildThisFileDirectory)NetOfficeBuildTasks.dll" />

  <ItemGroup>
    <Library Include="$(MSBuildThisFileDirectory)AcmeCorpAddinNet46.dll" />
  </ItemGroup>

  <ItemGroup>
    <OfficeApps Include="Word" />
    <OfficeApps Include="Excel" />
    <OfficeApps Include="PowerPoint" />
    <OfficeApps Include="Outlook" />
  </ItemGroup>

  <Target Name="Build">
    <RegisterAddin AssemblyPath="@(Library)" OfficeApps="@(OfficeApps)" />
  </Target>

  <Target Name="Clean">
    <CleanAddin AssemblyPath="@(Library)" OfficeApps="@(OfficeApps)" />
  </Target>
</Project>